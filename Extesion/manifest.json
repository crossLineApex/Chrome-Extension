{
    "manifest_version": 3,
    "name": "Linkedin Chrome Extension",
    "description": "Send invite request to all searched linkedin accounts",
    "version": "1.0",
    "icons" : {
        "32": "images/icon-32.png"
    },
    "content_scripts": [{

        "js": [
            "content.js"
        ],

        "matches" : [
            "https://*/*"
        ]
    }],
    "action" : {
        "default_popup" : "popup.html"
    },
    "permissions": ["tabs",   
     "activeTab"]
}